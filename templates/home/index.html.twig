{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<body>
{# templates/partials/_navbar.html.twig #}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
        
            MonSite
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
           
            <ul class="navbar-nav">
                
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_index') }}">Administration</a>
                    </li>
                {% endif %}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="{{ path('app_notifications') }}">
                            Notifications
                            {% if app.user.unreadNotificationsCount > 0 %}
                                <span class="badge bg-danger rounded-pill">
                                    {{ app.user.unreadNotificationsCount }}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-white">
                            Bonjour {{ app.user.lastName }} {{ app.user.firstName }} 
                        </span> 
                    </li>
                    {# Dans la navbar, après le nom de l'utilisateur #}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile') }}">Mon Profil</a>
                    </li>
                {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form action="{{ path('app_home') }}" method="get" class="search-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher une matière..." value="{{ query }}">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            Rechercher
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h1 class="mb-4">
        {% if query %}
            Résultats de recherche pour "{{ query }}"
        {% else %}
            Nos Matières
        {% endif %}
    </h1>
    
    <div class="row">
        {% if subjects|length > 0 %}
            {% for subject in subjects %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ subject.name }}</h5>
                            <p class="card-text">
                                Découvrez nos exercices en {{ subject.name }}
                            </p>
                            <a href="{{ path('app_subject_show', {'id': subject.id}) }}" class="btn btn-primary">Voir les chapitres</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    {% if query %}
                        Aucune matière trouvée pour "{{ query }}"
                    {% else %}
                        Aucune matière disponible pour le moment.
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>

<style>
    .navbar {
        box-shadow: 0 2px 4px rgba(0,0,0,.1);
        margin-bottom: 2rem;
    }
    .navbar-brand {
        font-weight: bold;
        font-size: 1.5rem;
    }
    .nav-link {
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }
    .nav-link:hover {
        color: #ffc107 !important;
    }
    .navbar-dark .navbar-nav .nav-link {
        color: rgba(255,255,255,.8);
    }
    .navbar-dark .navbar-nav .nav-link:hover {
        color: #ffffff;
    }
    .navbar-dark .navbar-nav .active > .nav-link {
        color: #ffc107;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .card-title {
        color: #2c3e50;
        font-weight: bold;
    }
    
    .card-text {
        color: #666;
    }
    
    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.5rem 1.5rem;
        transition: background-color 0.3s ease;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
    }

    h1 {
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .search-form {
        margin-bottom: 2rem;
    }
    
    .search-form .form-control {
        border-radius: 20px 0 0 20px;
        border: 1px solid #ddd;
        padding: 0.75rem 1.5rem;
    }
    
    .search-form .btn {
        border-radius: 0 20px 20px 0;
        padding: 0.75rem 1.5rem;
    }
    
    .search-form .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }
</style>

{% endblock %}
